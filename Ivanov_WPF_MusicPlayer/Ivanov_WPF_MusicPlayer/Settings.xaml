<Window x:Name="Visualizer_Settings" x:Class="Ivanov_WPF_MusicPlayer.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ivanov_WPF_MusicPlayer"
        mc:Ignorable="d"
        Title="Settings" Height="110" Width="260" MaxWidth="265" MaxHeight="140" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Background="#FF0C0715">

        <Button x:Name="okButton"
                Content="OK" 
                Margin="20,65,0,0"
                Background="#FF1DB954"
                HorizontalAlignment="Left" Width="100" Click="okButton_Click" Height="30" VerticalAlignment="Top" FontSize="15" FontWeight="Normal" BorderBrush="#FF1DB954"/>
        <Button x:Name="cancelButton"
                Content="Cancel" 
                Margin="140,65,0,0"
                Background="#FF1DB954"
                HorizontalAlignment="Left" Width="100" Click="cancelButton_Click" Height="30" VerticalAlignment="Top" FontSize="15" FontWeight="Normal" VerticalContentAlignment="Top" BorderBrush="#FF1DB954"/>
        <ComboBox x:Name="visualizerCB" HorizontalAlignment="Left" Margin="20,14,0,0" VerticalAlignment="Top" Width="220" Height="35" Background="#FFDADADA"/>

    </Grid>
</Window>
